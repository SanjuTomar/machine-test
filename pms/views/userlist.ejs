<!DOCTYPE html>
<html>
  <head>
          <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  </head>
<body>
<div class="container">
    <h1>User List</h1>
    
    <div class="row">
        <div class="col-md-12">
    
            <form action="/userlist " method="GET">
                    <table class="table">
         <tr>
    <table border="1">  
        <thead>     
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>password</th>
        <th>role</th>
        <th>Mobile</th>
        <th>imagefile</th>
        <th>Action</th>
        
    </tr>
</thead>
<tbody>
    <%  if(data.length>0)
  {
      data.forEach(function(row){
%>
<tr >
      
    
    
        <td><%= row._id %></td>
        <td><%= row.name %></td>
        <td><%= row.email %></td>
        <td><%= row.password %></td>
        <td><%= row.role %></td>
        <td><%= row.mob %></td>
        <td> <img src="./uploads/<%= row.imagefile %>" width="100px" height="50px"></td>
        <td>
            <a href="/edit/<%= row._id%>" class="btn btn-info btn-sm">Edit</a>
        <a href="/delete/<%= row._id%>" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
</tbody>
<%}) } %>
</table>
</div>

</div>
</div>
</body>
</html>